{
  "name": "@carmandale/oh-my-opencode",
  "version": "2.3.0-custom",
  "description": "CUSTOM FORK: Dale Carman's oh-my-opencode with THINK.ALIGN.ACT paradigm",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "type": "module",
  "files": [
    "dist"
  ],
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    },
    "./google-auth": {
      "types": "./dist/google-auth.d.ts",
      "import": "./dist/google-auth.js"
    },
    "./schema.json": "./dist/oh-my-opencode.schema.json"
  },
  "scripts": {
    "build": "bun build src/index.ts src/google-auth.ts --outdir dist --target bun --format esm --external @ast-grep/napi && tsc --emitDeclarationOnly && bun run build:schema",
    "build:schema": "bun run script/build-schema.ts",
    "clean": "rm -rf dist",
    "rebuild": "bun run clean && bun run build",
    "local:install": "bun run rebuild && bun link",
    "local:use": "cd ~/.config/opencode && bun link @carmandale/oh-my-opencode",
    "prepublishOnly": "bun run clean && bun run build",
    "typecheck": "tsc --noEmit"
  },
  "keywords": [
    "opencode",
    "plugin",
    "oracle",
    "librarian",
    "agents",
    "ai",
    "llm"
  ],
  "author": "Dale Carman (fork of YeonGyu-Kim)",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/carmandale/oh-my-opencode.git"
  },
  "bugs": {
    "url": "https://github.com/carmandale/oh-my-opencode/issues"
  },
  "homepage": "https://github.com/carmandale/oh-my-opencode#readme",
  "upstream": {
    "repository": "https://github.com/code-yeongyu/oh-my-opencode",
    "npm": "oh-my-opencode"
  },
  "dependencies": {
    "@ast-grep/cli": "^0.40.0",
    "@ast-grep/napi": "^0.40.0",
    "@code-yeongyu/comment-checker": "^0.6.0",
    "@openauthjs/openauth": "^0.4.3",
    "@opencode-ai/plugin": "^1.0.162",
    "hono": "^4.10.4",
    "picomatch": "^4.0.2",
    "xdg-basedir": "^5.1.0",
    "zod": "^4.1.8"
  },
  "devDependencies": {
    "@types/picomatch": "^3.0.2",
    "bun-types": "latest",
    "typescript": "^5.7.3"
  },
  "trustedDependencies": [
    "@ast-grep/cli",
    "@ast-grep/napi",
    "@code-yeongyu/comment-checker"
  ]
}
